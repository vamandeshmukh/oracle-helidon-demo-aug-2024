<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
	version="3.0">

	<persistence-unit name="pu1" transaction-type="JTA">
		<jta-data-source>ds1</jta-data-source>
		<class>com.vaman.demo.Pokemon</class>
		<class>com.vaman.demo.PokemonType</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.column_ordering_strategy"
				value="legacy" />
			<!-- <property name="jakarta.persistence.sql-load-script-source" value="META-INF/init_script.sql" 
				/> -->
		</properties>
	</persistence-unit>
</persistence>
